<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="resistor_display">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">0.2</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:clickable">true</item>
  </style>
  <style name="resistor_color">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:clickable">true</item>
    <item name="android:descendantFocusability">blocksDescendants</item>
    <item name="android:weightSum">1.05</item>
  </style>
  <style name="resistor_text">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">0.3</item>
    <item name="android:textColor">@color/dark_text</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="resistor_text_dark" parent="@style/resistor_text">
    <item name="android:textColor">@color/light_text</item>
  </style>
  <style name="resistor_radio">
    <item name="android:id">@id/radio</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">0.15</item>
    <item name="android:duplicateParentState">true</item>
    <item name="android:clickable">false</item>
  </style>
</resources>